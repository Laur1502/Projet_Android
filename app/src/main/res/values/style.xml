<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TextViewStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/petit_formal_script</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="EditTextStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#005c96</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="EditTextStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>


    <style name="EditTextStyle3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#005c96</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30px</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="backgroundTint">#005c96</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ButtonStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="backgroundTint">#005c96</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ButtonStyle3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="colorAccent">@color/white</item>
    </style>

</resources>